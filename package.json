{
  "name": "as-proto-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Piotr Ole≈õ <piotrek.oles@gmail.com>",
  "repository": "https://github.com/piotr-oles/as-proto.git",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "test:generate": "cd tests && protoc --plugin='protoc-gen-as=../packages/as-proto-gen/bin/as-proto-gen' --as_out='./assembly' ./proto/*.proto && protoc --js_out=import_style=commonjs,binary:./js ./proto/*.proto && cd ..",
    "test:build": "cd tests && asc assembly/test-all-types.ts --binaryFile=assembly/test-all-types.wasm --exportRuntime && cd ..",
    "test:prepare": "yarn test:generate && yarn test:build",
    "test": "yarn test:prepare && ava",
    "release": "auto shipit",
    "bench:generate": "cd bench/data && protoc --plugin='protoc-gen-as=../../packages/as-proto-gen/bin/as-proto-gen' --as_out='../as-proto/assembly/generated' ./bench.proto && cd ../../",
    "bench:build": "cd bench/as-proto && asc assembly/static_aspr.ts --target=release && tsc && cd ../../",
    "bench:prepare": "yarn bench:generate && yarn bench:build",
    "bench": "yarn bench:prepare && node bench"
  },
  "devDependencies": {
    "@assemblyscript/loader": "^0.19.20",
    "@auto-it/conventional-commits": "^10.32.5",
    "@auto-it/first-time-contributor": "^10.32.5",
    "assemblyscript": "^0.19.20",
    "auto": "^10.32.5",
    "benchmark": "^2.1.4",
    "chalk": "^4.0.0",
    "fs-extra": "^10.1.0",
    "lerna": "^5.1.6",
    "prettier": "^2.5.0",
    "protobufjs": "^6.11.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "first-time-contributor",
      "released"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
